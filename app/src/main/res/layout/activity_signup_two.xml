<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.signup_two">

    <ScrollView
        android:id="@+id/scrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_three"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="SIGN UP"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="Please enter Business details"
                android:textColor="#898989"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Business Name"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/businessname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/bussiness"
                android:drawablePadding="15dp"
                android:hint="Enter Your Business Name"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:singleLine="true"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Contact Person Name"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/personname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/username"
                android:drawablePadding="15dp"
                android:hint="Person name"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"
                android:singleLine="true"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Contact Person Number"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/personno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/mobileno"
                android:drawablePadding="15dp"
                android:hint="Enter 10 digit mobile number"
                android:inputType="phone"
                android:maxLength="10"
                android:selectAllOnFocus="true"
                android:singleLine="true"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Address 1"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="15dp"
                android:hint="Enter your address"
                android:inputType="textPostalAddress"
                android:selectAllOnFocus="true"
                android:singleLine="true">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Address 2"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="15dp"
                android:hint="Enter your address"
                android:inputType="textPostalAddress"
                android:selectAllOnFocus="true"
                android:singleLine="true"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="City"
                android:textColor="#992b1e"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/city"
                android:drawablePadding="15dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/colorBlack"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="State"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/city"
                android:drawablePadding="15dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/colorBlack"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Pincode"
                android:textColor="#992b1e"
                android:textStyle="normal" />

            <EditText
                android:maxLength="6"
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bgs"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="15dp"
                android:hint=""
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/colorBlack">

            </EditText>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/next_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_click_grad"
        android:text="Next"
        android:textColor="@color/colorWhite"></Button>
</RelativeLayout>
