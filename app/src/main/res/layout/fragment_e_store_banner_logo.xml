<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.eStoreBannerLogoFragment">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="Banner Setup"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="Preferred Dimensions 2000 x 500"
            android:textColor="#898989"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Language"
            android:layout_marginStart="10dp" />

        <Spinner
            style="@style/spinner_style"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Display For"
            android:layout_marginStart="10dp" />

        <Spinner
            style="@style/spinner_style"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Banner"
            android:layout_marginStart="10dp" />


        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:id="@+id/next_three"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_click_grad"
            android:text="Upload Banner"
            android:textColor="@color/colorWhite"></Button>
    </LinearLayout>

</ScrollView>