<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:elevation="@dimen/padding_10"
    android:layout_margin="@dimen/padding_10"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Orders"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
        <TextView
            android:layout_marginLeft="@dimen/padding_10"
            android:id="@+id/order_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/orders_view"
            android:textColor="@color/colorNavy"
            android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:text="Count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
        <TextView
            android:text="Amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/complet_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="completed"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />

        <TextView
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/complete_order_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/complete_order_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:text="Inprocess"
            android:id="@+id/inprocess_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />

        <TextView
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/inprocess_order_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/inprocess_order_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:text="Pending"
            android:id="@+id/pending_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />

        <TextView
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/pending_orders_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/pending_orders_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:text="Total"
            android:id="@+id/total_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />

        <TextView
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/total_orders_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/edit_bgs"
            android:id="@+id/total_orders_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>

