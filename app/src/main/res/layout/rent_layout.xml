<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/ren_detail"
    android:layout_margin="@dimen/padding_10"
    android:orientation="vertical">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is Self Pickup (Sale)" />
    <TextView
        android:layout_margin="@dimen/padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Type*"/>
    <Spinner
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/padding_10"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Price (\u20B9)*"/>
    <EditText
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/grey_button"/>
    <TextView
        android:padding="@dimen/padding_10"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Security(\u20B9)*"/>
    <EditText
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/grey_button"/>
    <TextView
        android:padding="@dimen/padding_10"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Quantity*"/>
    <EditText
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/grey_button"/>
    <TextView
        android:padding="@dimen/padding_10"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Buffer Days*"/>
    <EditText
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/grey_button"/>
    <TextView
        android:padding="@dimen/padding_10"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimun Rental Duration*"/>
    <EditText
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/grey_button"/>
    <TextView
        android:padding="@dimen/padding_10"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Terms*"/>
    <EditText
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/grey_button"/>
    <LinearLayout
        android:layout_margin="@dimen/padding_10"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginRight="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"/>
        <TextView
            android:id="@+id/cancel_ren"
            android:padding="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/transperantborder"/>
    </LinearLayout>

</LinearLayout>
