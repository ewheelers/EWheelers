<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrolIs"
    tools:context=".Fragments.eStoreSubEnglishFragment">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <Switch
            android:id="@+id/editMode"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Edit"
            android:textOff="OFF"
            android:textOn="ON"
            android:checked="false"
            android:switchPadding="@dimen/padding_10"
            android:drawablePadding="@dimen/padding_10"
            android:drawableStart="@drawable/edit_mode"
            android:padding="@dimen/padding_10"
            android:layout_marginRight="25dp"
            android:drawableLeft="@drawable/edit_bgs"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Name"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edit_bgs"
            android:drawableLeft="@mipmap/bussiness"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:enabled="false"
            android:textColor="@color/colorNavy"
            android:singleLine="true"></EditText>


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Address 1"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/address_one"
            android:layout_margin="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="8"
            android:padding="@dimen/padding_10"
            android:minLines="6"
            android:enabled="false"
            android:textColor="@color/colorNavy"
            android:background="@drawable/edit_bgs"
            android:scrollbars="vertical"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Address 2"
            android:layout_marginStart="10dp" />
        <EditText
            android:id="@+id/address_two"
            android:layout_margin="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="8"
            android:padding="@dimen/padding_10"
            android:minLines="6"
            android:enabled="false"
            android:textColor="@color/colorNavy"
            android:background="@drawable/edit_bgs"
            android:scrollbars="vertical"></EditText>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/padding_10"
            android:id="@+id/save_return_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_click_grad"
            android:text="Save Changes"
            android:textColor="@color/colorWhite"></Button>
    </LinearLayout>



</ScrollView>