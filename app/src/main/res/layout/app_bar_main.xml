<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame5"
    android:background="@color/colorWhite"
    tools:context=".Activities.Home">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:weightSum="2.75">

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="0.25"
            app:srcCompat="@drawable/homemenu" />

        <TextView
            android:id="@+id/username"
            android:singleLine="true"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/transperantborder"
            android:gravity="center"
            android:padding="5dp"
            android:text="Help"
            android:textColor="#000" />

        <ToggleButton
            style="@style/AppTheme.AppBarOverlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/padding_10"
            android:textOff="OFF"
            android:textOn="ON"
            android:checked="true"
            android:id="@+id/toggle_btn"/>

        <ImageView
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/logout"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/scanQR"
        android:layout_below="@+id/header_title"/>

    <Button
        style="@style/TextAppearance.MaterialComponents.Button"
        android:id="@+id/scanQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bgs"
        android:text="Scan QR Code"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_above="@id/bottomLayout"/>

    <RadioGroup
        android:background="@drawable/edit_bgs"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/home_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:checked="true"
            android:gravity="center"
            android:text="Home"
            android:textColor="@drawable/radiobuttonstate" />

        <RadioButton
            android:id="@+id/wallet_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Wallet"
            android:textColor="@drawable/radiobuttonstate" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/scan_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Scan QR"
            android:textColor="@drawable/radiobuttonstate"/>

        <RadioButton
            android:id="@+id/messages_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Messages"
            android:textColor="@drawable/radiobuttonstate" />
    </RadioGroup>

</RelativeLayout>

