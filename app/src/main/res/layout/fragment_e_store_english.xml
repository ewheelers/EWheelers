<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrol"
    tools:context=".Fragments.eStoreEnglishFragment">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Shop Name"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/businessname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edit_bgs"
            android:drawableLeft="@mipmap/bussiness"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="true"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Contact Person"
            android:layout_marginStart="10dp" />

        <EditText
            android:background="@drawable/edit_bgs"
            android:drawableLeft="@mipmap/username"
            android:id="@+id/personname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Description"
            android:layout_marginStart="10dp" />

        <EditText
            android:background="@drawable/edit_bgs"
            android:id="@+id/personno"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Payment Policy"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:background="@drawable/edit_bgs">

        </EditText>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Delivery Policy"
            android:layout_marginStart="10dp" />
        <EditText
            android:background="@drawable/edit_bgs"
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Refund Policy"
            android:layout_marginStart="10dp" />
        <EditText
            android:background="@drawable/edit_bgs"
            android:id="@+id/refund"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Additional Information"
            android:layout_marginStart="10dp" />
        <EditText
            android:background="@drawable/edit_bgs"
            android:id="@+id/additionalinfor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"></EditText>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#992b1e"
            android:textStyle="normal"
            android:text="Seller Information"
            android:layout_marginStart="10dp" />
        <EditText
            android:background="@drawable/edit_bgs"
            android:id="@+id/sellerinfor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:selectAllOnFocus="true"></EditText>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:id="@+id/next_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_click_grad"
            android:text="Save Changes"
            android:textColor="@color/colorWhite"></Button>
    </LinearLayout>

</ScrollView>